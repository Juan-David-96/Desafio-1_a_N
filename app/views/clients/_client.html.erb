<div id="<%= dom_id client %>">
  <tr style= "text-decoration: none; color: white;">
    <th scope="row"><%= client.id %></th>
    <td><%= client.name %></td>
    <td><%= client.age %></td>
    <td><%= client.movies.last %></td>
    <td><%= link_to "Show this client", client, class: "btn btn-primary" %></td>
    <td><%= link_to "Edit this client", edit_client_path(client), class: "btn btn-primary" %></td>
    <!--<td><%= button_to "Destroy this client", @client, method: :delete %></td>
    -->
  </tr>
</div>
